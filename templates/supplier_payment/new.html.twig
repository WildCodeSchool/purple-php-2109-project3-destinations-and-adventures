{% extends 'base.html.twig' %}

{% block title %}New SupplierPayment{% endblock %}

{% block main %}
<div class="supplierPayment">
{% embed "/components/_accordion.html.twig" %}
{% block supplierPayments %}

<h1>SupplierPayment index</h1>

<div class="payments">
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Payment Date</th>
                <th>Amount in $</th>
                <th>Commission Due</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for supplier_payment in supplier_payments %}
            <tr>
                <td>{{ supplier_payment.supplier.name }}</td>
                <td>{{ supplier_payment.date ? supplier_payment.date|date('Y-m-d') : '' }}</td>
                <td>{{ supplier_payment.paidAmount }}</td>
                <td>{{ supplier_payment.dueCommission }}</td>

                </td>
                <td>
                    <a href="{{ path('supplier_payment_edit', {booking_id: supplier_payment.booking.id, supplierPayment_id: supplier_payment.id}) }}">Edit</a>
                        {{ include('supplier_payment/_delete_form.html.twig') }}
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
    {{ include('supplier_payment/_form.html.twig') }}
    {% endblock supplierPayments %}

{% block generalInfoPath %}{{ path('general_edit', {'id': booking.id}) }}{% endblock generalInfoPath %}
{% block clientPaymentsPath %}{{ path('client_payment_new', {booking_id: booking.id}) }}{% endblock clientPaymentsPath %}
{% block financialInfoPath %}{{ path('financial_edit', {booking_id: booking.id}) }}{% endblock financialInfoPath %}
{% block supplierInfoPath %}{{ path('supplier_information_new', {booking_id: booking.id}) }}{% endblock supplierInfoPath %}
{% endembed %}
</div>
{% endblock %}
