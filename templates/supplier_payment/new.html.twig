{% extends 'base.html.twig' %}

{% block title %}New SupplierPayment{% endblock %}

{% block main %}

    <h1>SupplierPayment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>PaidAmount</th>
                <th>DueCommission</th>
                <th>DueDateCommission</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for supplier_payment in supplier_payments %}
            <tr>
                <td>{{ supplier_payment.id }}</td>
                <td>{{ supplier_payment.date ? supplier_payment.date|date('Y-m-d') : '' }}</td>
                <td>{{ supplier_payment.paidAmount }}</td>
                <td>{{ supplier_payment.dueCommission }}</td>
                <td>{{ supplier_payment.dueDateCommission ? supplier_payment.dueDateCommission|date('Y-m-d') : '' }}
                </td>
                <td>
                    <a
                        href="{{ path('supplier_payment_edit', {booking_id: supplier_payment.booking.id, supplierPayment_id: supplier_payment.id}) }}">Edit</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <h1>Create new SupplierPayment</h1>

    {{ include('supplier_payment/_form.html.twig') }}

{% endblock %}
