{% extends 'base.html.twig' %}

{% block title %}Edit SupplierPayment{% endblock %}

{% block body %}

<h1>SupplierPayment index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>DueAmount</th>
            <th>DueDate</th>
            <th>ExchangeRate</th>
            <th>DueDollarsAmount</th>
            <th>Note</th>
            <th>Date</th>
            <th>PaidAmount</th>
            <th>DueCommission</th>
            <th>DueDateCommission</th>
            <th>Currency</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for supplier_payment in supplier_payments %}
        <tr>
            <td>{{ supplier_payment.id }}</td>
            <td>{{ supplier_payment.dueAmount }}</td>
            <td>{{ supplier_payment.dueDate ? supplier_payment.dueDate|date('Y-m-d') : '' }}</td>
            <td>{{ supplier_payment.exchangeRate }}</td>
            <td>{{ supplier_payment.dueDollarsAmount }}</td>
            <td>{{ supplier_payment.note }}</td>
            <td>{{ supplier_payment.date ? supplier_payment.date|date('Y-m-d') : '' }}</td>
            <td>{{ supplier_payment.paidAmount }}</td>
            <td>{{ supplier_payment.dueCommission }}</td>
            <td>{{ supplier_payment.dueDateCommission ? supplier_payment.dueDateCommission|date('Y-m-d') : '' }}</td>
            <td>{{ supplier_payment.currency }}</td>
            <td>
                <a href="{{ path('supplier_payment_edit', {'supplier_payment_id': supplier_payment.id, 'booking_id': supplier_payment.booking.id}) }}">edit</a>
                {{ include('supplier_payment/_delete_form.html.twig') }}
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="12">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
    <h1>Edit SupplierPayment</h1>

    {{ include('supplier_payment/_form.html.twig', {'button_label': 'Update'}) }}

{% endblock %}
