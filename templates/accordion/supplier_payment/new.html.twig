{% extends 'accordion/layout.html.twig' %}

{% block title %}New SupplierPayment{% endblock %}

{% block supplierPayments %}
<div class="payments">
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Payment Date</th>
                <th>Amount</th>
                <th>Commission Due</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for supplier_payment in supplier_payments %}
            <tr>
                <td>{{ supplier_payment.supplier.name }}</td>
                <td>{{ supplier_payment.date ? supplier_payment.date|date('m-d-Y') : '' }}</td>
                <td>{{ supplier_payment.paidAmount|format_currency('USD', {rounding_mode: 'floor'}) }}</td>
                <td>{{ supplier_payment.dueCommission|format_currency('USD', {rounding_mode: 'floor'}) }}</td>
                <td class="status {{ supplier_payment.status }} "><span>{{ supplier_payment.status }}</span></td>
                <td>
                    {% if supplier_payment.status == 'due' %}
                    <a href="{{ path('supplier_payment_edit', {'supplierPayment_id': supplier_payment.id, 'booking_id': booking.id}) }}"><svg xmlns="http://www.w3.org/2000/svg"
                        width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                        <path
                            d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                    </svg></a>&nbsp;&nbsp;&nbsp;
                {% endif %}

                <form method="post"
                    action="{{ path('supplier_payment_delete', {'supplier_payment_id': supplier_payment.id, 'booking_id': supplier_payment.booking.id}) }}"
                    onsubmit="return confirm('Are you sure you want to delete this supplier payment?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ supplier_payment.id) }}">
                    <button class="btn"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                            fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                            <path
                                d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                        </svg></button>
                </form>
                    {# <a
                        href="{{ path('supplier_payment_edit', {booking_id: supplier_payment.booking.id, supplierPayment_id: supplier_payment.id}) }}">Edit</a>
                    {{ include('accordion/supplier_payment/_delete_form.html.twig') }}
                    {% else %}
                    {{ include('accordion/supplier_payment/_delete_form.html.twig') }}
                    {% endif %} #}
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6">No records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{{ include('accordion/supplier_payment/_form.html.twig') }}
{% endblock supplierPayments %}