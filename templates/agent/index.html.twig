{% extends 'base.html.twig' %}

{% block title %}Agent index{% endblock %}

{% block main %}
<h1>Agent index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Commission</th>
            <th>Booking Name</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for agent in agents %}
        <tr>
            <td>{{ agent.name }}</td>
            <td>{{ agent.commission }}</td>
            {% for booking in agent.bookings %}
            <td>{{ booking.name }}</td>
            {% endfor %}
            <td>
                <!-- action to edit and delete -->
                {% for booking in agent.bookings %}
                <a href="{{ path('agent_edit', {'agent_id': agent.id, 'booking_id': booking.id}) }}">Edit</a>
                {{ include('agent/_delete_form.html.twig') }}
                {% endfor %}
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="4">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}